<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_personal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:id="@+id/relative_layout_manage_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/image_manage_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_manage_order"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_view_manage_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_manage_order"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_personal"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_manage_orders_move"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
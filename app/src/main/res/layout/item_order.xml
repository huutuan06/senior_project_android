<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/image_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/img_book"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/text_view_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="title"/>

            <TextView
                android:id="@+id/text_view_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_book_title"
                android:text="$4.99"/>
            <TextView
                android:id="@+id/text_view_multiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_book_title"
                android:layout_toEndOf="@id/text_view_book_price"
                android:text="X"/>
            <TextView
                android:id="@+id/text_view_total_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_book_title"
                android:layout_toEndOf="@id/text_view_multiplication"
                android:text="2"/>
        </RelativeLayout>
</LinearLayout>